{
	"name": "electron-vite-sveltekit-template",
	"version": "1.0.0",
	"description": "An Electron application with Svelte and TypeScript",
	"main": "./out/main/index.js",
	"author": "example.com",
	"homepage": "https://www.electronjs.org",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:all": "tsc --noEmit -p tsconfig.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:all",
		"start": "electron-vite preview",
		"dev": "concurrently -p \"[{time}] [{name}]\" -n=sveltekit,electron -c=red,blue \"electron-vite dev --watch\" \"pnpm dev:sveltekit\"",
		"build": "npm run build:sveltekit && npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:win": "npm run build && electron-builder --win --config",
		"build:mac": "npm run build && electron-builder --mac --config",
		"build:linux": "npm run build && electron-builder --linux --config",
		"dev:sveltekit": "powershell -Command \"Set-Location -Path '.\\src\\renderer'; pnpm dev",
		"build:sveltekit": "powershell -Command \"Set-Location -Path '.\\src\\renderer'; pnpm build"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^2.0.0",
		"@electron-toolkit/utils": "^1.0.2",
		"@prisma/client": "5.0.0",
		"electron-serve": "^1.1.0",
		"electron-updater": "^5.3.0"
	},
	"devDependencies": {
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^1.2.4",
		"@sveltejs/vite-plugin-svelte": "^2.4.3",
		"@types/node": "^18.17.1",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"concurrently": "^8.2.0",
		"electron": "^24.6.5",
		"electron-builder": "^23.6.0",
		"electron-vite": "^1.0.26",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^8.9.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.8.8",
		"prisma": "^5.0.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.7"
	}
}
